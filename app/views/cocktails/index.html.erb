<div class="container">
  <h1>All Cocktails for you:</h1>

  <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="avatar-square">
          <%= cl_image_tag(cocktail.photo,
      width: 400, height: 300, crop: :fill) %>
          <%= link_to "#{cocktail.name}", cocktail_path(cocktail) %>
        </div>
      <% end %>
  </div>
</div>



